<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLight"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/title"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Title"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SampleTitle"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/authorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/author"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Author"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/authorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SampleAuthor"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ISBNLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ISBN"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="ISBN"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/ISBNView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SampleISBN"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/status"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Status"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/statusView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SampleStatus"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ownerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/owner"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Owner"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/ownerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SampleOwner"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/returnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/confirmReturnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:visibility="invisible"
                android:onClick="onBookDetailEdit"/>

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:visibility="invisible"
                android:onClick="onBookDetailDelete"/>
            <Button
                android:id="@+id/requestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request"
                android:visibility="invisible"
                android:onClick="onBookDetailRequest"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>